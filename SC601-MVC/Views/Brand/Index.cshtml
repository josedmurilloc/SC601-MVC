@model IEnumerable<SC601_MVC.Models.Brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Brands</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.brand_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.brand_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.brand_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.brand_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.brand_id  }) |
            @Html.ActionLink("Details", "Details", new { id=item.brand_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.brand_id })
        </td>
    </tr>
}

</table>
